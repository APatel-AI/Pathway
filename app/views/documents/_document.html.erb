<div id="<%= dom_id document %>" class="card mb-4">
  <div class="card-body">
    <h5 class="card-title">Document Details</h5>

    <p class="mb-2">
      <%= image_tag(document.image_url, class: " mt-3") %>
    </p>

    <p class="mb-2">
      <strong>Expiry Date:</strong>
      <%= document.expiry_date.strftime("%B %d, %Y") if document.expiry_date %>
    </p>

    <p class="mb-2">
      <strong>Summary:</strong>
      <%= document.summary %>
    </p>

    <p class="mb-2">
      <strong>Status:</strong>
      <%= document.status %>
    </p>
  </div>
</div>
