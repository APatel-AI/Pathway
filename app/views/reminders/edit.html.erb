<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header">
          <h2 class="card-title mb-0">Edit Reminder</h2>
        </div>
        <div class="card-body">
          <%= render "form", reminder: @reminder %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="d-flex justify-content-start gap-2">

       <%= link_to reminders_path, class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left mr-1"></i> Back to Reminders
        <% end %>

        <%= link_to @reminder, class: "btn btn-secondary" do %>
          <i class="fas fa-eye mr-1"></i> Show Reminder
        <% end %>

       
      </div>
    </div>
  </div>
</div>
