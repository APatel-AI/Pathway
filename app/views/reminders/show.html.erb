<div class="d-flex flex-column min-vh-100">
  <div class="container my-4 flex-grow-1">
    <div class="row">
      <div class="col-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <%= render @reminder %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <div class="d-flex justify-content-start gap-2">
          <%= link_to reminders_path, class: "btn btn-secondary" do %>
            Back to Reminders
          <% end %>

          <%= link_to edit_reminder_path(@reminder), class: "btn btn-outline-secondary", title: "Edit Reminder" do %>
            <i class="fas fa-edit"></i>
          <% end %>

          <%= button_to @reminder, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", title: "Delete Reminder" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
