<div class="container my-4">
  <!-- Profile Information Section -->
  <div class="card mb-4">
    <div class="card-body">
      <%= render @dependent %>
      <div class="d-flex justify-content-between mt-3">
        <%= link_to "Edit Profile", edit_dependent_path(@dependent), class: "btn btn-primary" %>
        <%= button_to "Delete Profile", @dependent, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this profile?" } %>
      </div>
    </div>
  </div>

  <!-- Documents Section -->
  <div class="card">
    <div class="card-body">
      <h1 class="mb-4">View Documents</h1>
      <div class="mb-3">
        <% @dependent.documents.each do |document| %>
          <%= render partial: "documents/document", locals: { document: document } %>
        <% end %>
      </div>
      <%= link_to "Upload Documents", new_dependent_document_path(@dependent), class: "btn form_btn w-50" %>
      <%= link_to "Back", dependents_path, class: "btn form_btn w-50" %>
    </div>
  </div>
</div>
