<%= form_with(model: dependent, local: true) do |form| %>
  <% if dependent.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(dependent.errors.count, "error") %> prohibited this dependent from being saved:</h4>
      <ul>
        <% dependent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :relationship, class: "form-label" %>
    <%= form.select :relationship, options_for_select(['Self', 'Spouse', 'Child', 'Parent', 'Sibling', 'FiancÃ©(e)', 'Legal Guardian', 'Stepchild', 'Stepparent', 'Adopted Child', 'Sponsor', 'Other']), {}, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :date_of_birth, class: "form-label" %>
    <%= form.date_field :date_of_birth, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :immigration_status, class: "form-label" %>
    <%= form.select :immigration_status, options_for_select(['Citizen', 'Permanent Resident', 'Work Visa', 'Student Visa', 'Refugee', 'Other']), {}, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :country_of_citizenship, class: "form-label" %>
    <%= form.text_field :country_of_citizenship, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :contact_info, class: "form-label" %>
    <%= form.text_area :contact_info, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div>
    <%= form.submit dependent.new_record? ? "Create Profile" : "Update Profile", class: "btn btn-primary" %>
  </div>

<% end %>
