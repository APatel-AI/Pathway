<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: { class: 'needs-validation', novalidate: true }) do |f| %>

  <div class="form-inputs mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
