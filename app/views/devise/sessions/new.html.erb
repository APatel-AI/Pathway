<div class="container login-form">
  <div class="mt-5">
    <h3 class="text-secondary">Welcome!</h3>
    <h2>Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-inputs mb-3 w-50">
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, required: false, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, { class: 'form-check-input' }, 1, 0 %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
