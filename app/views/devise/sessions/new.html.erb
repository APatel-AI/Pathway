<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="container login-form mt-10">
    <div class="row justify-content-center">
      <div class="col-md-11 col-lg-8">
        <div class="card shadow-lg">
          <div class="row g-0">
            <div class="col-md-6 bg-black text-white p-4 d-flex flex-column justify-content-center">
              <h3 class="display-4 text-center">Welcome!</h3>
            </div>
            <div class="col-md-6 bg-light p-4">
              <h2 class="mb-4">Log in</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
                <div class="form-inputs mb-3">
                  <div class="mb-3">
                    <%= f.label :email, class: 'form-label' %>
                    <%= f.email_field :email, required: false, autofocus: true, autocomplete: "email", class: 'form-control' %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :password, class: 'form-label' %>
                    <%= f.password_field :password, required: false, autocomplete: "current-password", class: 'form-control' %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-check mb-3">
                      <%= f.check_box :remember_me, { class: 'form-check-input' }, 1, 0 %>
                      <%= f.label :remember_me, class: 'form-check-label' %>
                    </div>
                  <% end %>
                </div>
                <div class="form-actions">
                  <%= f.submit "Log in", class: 'btn form_btn w-100' %>
                  <%= render "devise/shared/links" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
