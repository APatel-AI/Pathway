<h2 class="text-center my-4">Edit Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "container mt-5" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="mb-3">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-warning">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>


    <div class="mb-3">
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: true,
                  input_html: { class: "form-control", autocomplete: "new-password" },
                  label_html: { class: "form-label" } %>
    </div>
    <div class="mb-3">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { class: "form-control", autocomplete: "new-password" },
                  label_html: { class: "form-label" } %>
    </div>
    <div class="mb-3">
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { class: "form-control", autocomplete: "current-password" },
                  label_html: { class: "form-label" } %>
    </div>
  </div>

  <div class="form-actions mt-4">
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>
<% end %>


<div class="text-center mb-4">
  Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
</div>

<div class="text-center">
  <%= link_to "Back", :back, class: "btn btn-dark" %>
</div>
